# Jarvis Environment Configuration

# Node environment
NODE_ENV=development

# Server ports
PORT=3000
WS_PORT=3001

# Redis
REDIS_URL=redis://localhost:6379

# PostgreSQL (for vector store)
DATABASE_URL=postgresql://jarvis:jarvis@localhost:5432/jarvis

# Service URLs
ASR_SERVICE_URL=http://localhost:8001
TTS_SERVICE_URL=http://localhost:8002
VERIFICATION_SERVICE_URL=http://localhost:8003
VECTOR_STORE_URL=http://localhost:8004

# LLM Configuration
# Use either OPENAI_API_KEY or LLM_API_KEY (OPENAI_API_KEY takes precedence if LLM_API_KEY is placeholder)
OPENAI_API_KEY=your-openai-api-key-here
# LLM_API_KEY=your-api-key-here  # Alternative: use this instead of OPENAI_API_KEY
LLM_MODEL=gpt-4

# GitHub Integration
GITHUB_TOKEN=your-github-token-here

# Performance
MAX_LATENCY_MS=500
API_REFRESH_INTERVAL_MS=180000

# Session
SESSION_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=debug
