# Production Environment Configuration

# Node environment
NODE_ENV=production

# Server ports (typically from environment or defaults)
PORT=3000
WS_PORT=3001

# Redis (use production Redis URL)
REDIS_URL=redis://redis:6379

# PostgreSQL (use production database)
DATABASE_URL=postgresql://jarvis:password@postgres:5432/jarvis

# Service URLs (internal service mesh/k8s)
ASR_SERVICE_URL=http://asr-service:8001
TTS_SERVICE_URL=http://tts-service:8002
VERIFICATION_SERVICE_URL=http://verification-service:8003
VECTOR_STORE_URL=http://vector-store:8004

# LLM Configuration
LLM_MODEL=gpt-4
# IMPORTANT: Set OPENAI_API_KEY in environment secrets, NOT in this file

# GitHub Integration
# IMPORTANT: Set GITHUB_TOKEN in environment secrets, NOT in this file

# Performance (strict for production)
MAX_LATENCY_MS=500
API_REFRESH_INTERVAL_MS=180000

# Session (standard timeout)
SESSION_TIMEOUT_MS=300000

# Logging (less verbose for production)
LOG_LEVEL=info

# Verification (always enabled in production)
VERIFICATION_ENABLED=true
