# Test Environment Configuration

# Node environment
NODE_ENV=test

# Server ports (different ports to avoid conflicts)
PORT=3100
WS_PORT=3101

# Redis (test instance)
REDIS_URL=redis://localhost:6380

# PostgreSQL (test database)
DATABASE_URL=postgresql://jarvis:jarvis@localhost:5432/jarvis_test

# Service URLs (mock services for testing)
ASR_SERVICE_URL=http://localhost:9001
TTS_SERVICE_URL=http://localhost:9002
VERIFICATION_SERVICE_URL=http://localhost:9003
VECTOR_STORE_URL=http://localhost:9004

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo
# Use mock API key for tests
OPENAI_API_KEY=test-api-key

# Performance (relaxed for testing)
MAX_LATENCY_MS=2000
API_REFRESH_INTERVAL_MS=999999999

# Session (longer timeout for debugging tests)
SESSION_TIMEOUT_MS=999999999

# Logging (minimal for clean test output)
LOG_LEVEL=error

# Verification (can be disabled for faster tests)
VERIFICATION_ENABLED=false
