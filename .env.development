# Development Environment Configuration

# Node environment
NODE_ENV=development

# Server ports
PORT=3000
WS_PORT=3001

# Redis
REDIS_URL=redis://localhost:6379

# PostgreSQL (for vector store)
DATABASE_URL=postgresql://jarvis:jarvis@localhost:5432/jarvis

# Service URLs (for local development)
ASR_SERVICE_URL=http://localhost:8001
TTS_SERVICE_URL=http://localhost:8002
VERIFICATION_SERVICE_URL=http://localhost:8003
VECTOR_STORE_URL=http://localhost:8004

# LLM Configuration
LLM_MODEL=gpt-4
# Set your OpenAI API key in .env.local or .env

# Performance (relaxed for development)
MAX_LATENCY_MS=1000
API_REFRESH_INTERVAL_MS=300000

# Session (shorter timeout for development)
SESSION_TIMEOUT_MS=600000

# Logging (verbose for development)
LOG_LEVEL=debug

# Verification (can be disabled for faster development)
VERIFICATION_ENABLED=true
